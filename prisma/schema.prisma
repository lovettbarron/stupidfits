generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  email  String  @unique
  id     Int     @default(autoincrement()) @id
  name   String?
  social String  @unique
  posts  Post[]
}

model Post {
  authorId  Int?
  content   String?
  id        Int     @default(autoincrement()) @id
  published Boolean @default(false)
  title     String
  author    User?   @relation(fields: [authorId], references: [id])
}

model Fit {
  postId Int?
  photo  String?
  bag    Item[]
  shoes  Item[]
  jacket Item[]
  pants  Item[]
  shirt  Item[]
  layer  Item[]
  extra  Item[]
  desc   String
  temp   Item
}

model Closet {
}

model Brand {
  id   Int     @default(autoincrement()) @id
  name String
  logo String?
  desc String?
}

model Item {
  type   ItemType
  photo  String?
  brand  Brand
  model  String
  year   Int?
  size   String
  colour Colour[]
  Sale   String?
  repair Boolean
  qual   Qual
}

enum ItemType {
  BAG
  SHOE
  JACKET
  PANT
  SHIRT
  LAYER
  EXTRA
}

